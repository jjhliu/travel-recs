<%- include('partials/header') %>

<h1>Share Recommendations</h1>


  <form class=" " action="/compose" method="post">
    <div class="form-group">
      <label for="exampleInputTitle">City Name</label>
      <input type="text" class="form-control" name="postTitle" placeholder="Enter Title">
    </div>
    <div class="form-group">
      <label for="googleMapsLink">Google Maps Shared Link</label>
      <textarea class="form-control" id="googleMapsLink" name="postBody" rows="1" placeholder="Enter Post"></textarea>
    </div>

    <div class="form-group">
        <label for="inputDescription">Description</label>
        <textarea class="form-control" name="postDescription" rows="3" placeholder="Enter Description"></textarea>
      </div>
    <button type="submit" class="btn btn-primary">Publish</button>
  </form>

<%- include('partials/footer') %>

